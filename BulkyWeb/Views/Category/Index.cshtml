@model List<Category>


	<div class="container">
		<div class="row pt-4 pb-3">
			<div class="col-6 text-primary">
				<h2>Category List</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-action="Create" asp-controller="Category" class="btn btn-primary"> 

					<i class="bi bi-plus-circle"></i> Create New Category
				</a>
			</div>
		</div>
	</div>

<table class="table table-bordered table-striped">
	<thead>

		<tr>
			<th>
				Name
			</th>
			<th>
				Display Order
			</th>
			
		
			
		</tr>
	</thead>

	<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>

				<td>
					@obj.Name
				</td>
				<td>@obj.DisplayOrder
				</td>
				<td>
					<div class="w-75 btnbtn-group" role="group">
						<a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square ">
								Edit
							</i>
						</a>
						<a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill">
								Delete
							</i>
						</a>

					</div>
				</td>
			</tr>
		}
	</tbody>
</table>